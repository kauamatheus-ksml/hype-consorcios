# Proteger arquivos sensíveis e de desenvolvimento
# Permitir acesso aos arquivos principais do sistema
<FilesMatch "^(index|login|dashboard|leads|sales|users|profile|audit-logs|site-config|create_.*|fix_.*|test_.*)\.php$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Bloquear arquivos de configuração sensíveis
<FilesMatch "^(database|config)\.php$">
    Order deny,allow
    Deny from all
</FilesMatch>

# Bloquear acesso ao diretório dev-tools
<Directory "dev-tools">
    Order deny,allow
    Deny from all
</Directory>

# Bloquear acesso a arquivos de backup e configuração
<FilesMatch "\.(sql|json|bak|backup|log)$">
    Order deny,allow
    Deny from all
</FilesMatch>


# Permitir acesso a arquivos de API
<Directory "api">
    <Files "*.php">
        Order allow,deny
        Allow from all
    </Files>
</Directory>

# Permitir acesso a componentes
<Directory "components">
    <Files "*.php">
        Order allow,deny
        Allow from all
    </Files>
</Directory>

# Permitir acesso a classes
<Directory "classes">
    <Files "*.php">
        Order allow,deny
        Allow from all
    </Files>
</Directory>