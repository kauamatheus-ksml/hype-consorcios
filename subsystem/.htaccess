# Configuração de acesso para o subsystem
# Proteger arquivos sensíveis mas permitir funcionamento normal

# Bloquear acesso a arquivos de configuração específicos
<Files "database.php">
    Order deny,allow
    Deny from all
</Files>

# Bloquear acesso ao diretório dev-tools
<Directory "dev-tools">
    Order deny,allow
    Deny from all
</Directory>

# Bloquear acesso a arquivos de backup e configuração
<FilesMatch "\.(sql|json|bak|backup|log)$">
    Order deny,allow
    Deny from all
</FilesMatch>

# Permitir acesso a arquivos PHP do sistema
<FilesMatch "\.php$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Permitir acesso a arquivos de API
<Directory "api">
    <Files "*.php">
        Order allow,deny
        Allow from all
    </Files>
</Directory>

# Permitir acesso a componentes
<Directory "components">
    <Files "*.php">
        Order allow,deny
        Allow from all
    </Files>
</Directory>

# Permitir acesso a classes
<Directory "classes">
    <Files "*.php">
        Order allow,deny
        Allow from all
    </Files>
</Directory>

# Permitir acesso a includes
<Directory "includes">
    <Files "*.php">
        Order allow,deny
        Allow from all
    </Files>
</Directory>

# Bloquear acesso direto ao diretório config (mas permitir includes)
<Directory "config">
    # Bloquear acesso direto via browser
    <Files "*.php">
        Order deny,allow
        Deny from all
    </Files>
</Directory>